<h1>Listing posts</h1>

<table>
  <tr>
    <th>Postid</th>
    <th>Uid</th>
    <th>Time</th>
    <th>Post</th>
    <th>Root</th>
    <th>Votes</th>
    <th>Rel</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.postid %></td>
    <td><%= post.uid %></td>
    <td><%= post.time %></td>
    <td><%= post.post %></td>
    <td><%= post.root %></td>
    <td><%= post.votes %></td>
    <td><%= post.rel %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
